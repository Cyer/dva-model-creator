{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "outDir": "./lib"
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
